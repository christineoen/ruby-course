<div class="row">

	<h1>Menu Items</h1>
	<%= form_tag("/orders", method: "post") do %>
	<table>
	    <thead>
	        <th>Item</th>
	        <th>Price</th>
	        <th>Quantity</th>
	    </thead>
	<tbody>
	    <% @items.each do |item| %>
	    <tr>
	        <td> <%= item.name %> </td>
	        <td> <%= number_to_currency(item.price) %> </td>
	        <td> <%= number_field_tag('order[' + item.id.to_s + '][quantity]')%> </td>
	    </tr>
	    <% end %>
	</tbody>
	</table>
	<%=submit_tag("Submit Order")%>
	<% end %>

</div>